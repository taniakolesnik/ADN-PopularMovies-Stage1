<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_details_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/medium_margin"/>

    <LinearLayout style="@style/MovieDetailsLayout"
        android:id="@+id/title_layout"
        android:layout_toRightOf="@id/posterImageView">

        <TextView
            android:id="@+id/title_tv"
            style="@style/MovieDetailsFields"
            android:text="@string/title_field" />

        <TextView
            android:id="@+id/title_value_tv"
            style="@style/MovieDetailsValues" />

    </LinearLayout>

    <LinearLayout style="@style/MovieDetailsLayout"
        android:id="@+id/releaseDate_layout"
        android:layout_below="@id/title_layout"
        android:layout_toRightOf="@id/posterImageView">

        <TextView
            android:id="@+id/releaseDate_tv"
            style="@style/MovieDetailsFields"
            android:text="@string/releaseDate_field" />

        <TextView
            android:id="@+id/releaseDate_value_tv"
            style="@style/MovieDetailsValues" />

    </LinearLayout>

    <LinearLayout style="@style/MovieDetailsLayout"
        android:id="@+id/vote_layout"
        android:layout_below="@id/releaseDate_layout"
        android:layout_toRightOf="@id/posterImageView">

        <TextView
            android:id="@+id/vote_tv"
            style="@style/MovieDetailsFields"
            android:text="@string/vote_field" />

        <TextView
            android:id="@+id/vote_value_tv"
            style="@style/MovieDetailsValues" />

    </LinearLayout>

    <LinearLayout style="@style/MovieDetailsLayout"
        android:layout_below="@id/posterImageView">

        <TextView
            android:id="@+id/plot_tv"
            style="@style/MovieDetailsFields"
            android:text="@string/plot_filed" />

        <TextView
            android:id="@+id/plot_value_tv"
            style="@style/MovieDetailsValues" />

    </LinearLayout>

</RelativeLayout>

</ScrollView>
